<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1C1C1C"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_restricted_details"
        android:src="@drawable/ic_cross"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_restricted_ingredients_details_title"
        app:layout_constraintBottom_toTopOf="@id/tv_restricted_ingredients_details"/>

    <TextView
        android:id="@+id/tv_restricted_ingredients_details_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:text="Название"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:gravity="start"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_restricted_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_restricted_ingredients_details"/>
    <TextView
        android:id="@+id/tv_restricted_ingredients_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/open_sans_light"
        android:text="Продукты"
        android:layout_marginBottom="5dp"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_restricted_ingredients_details_title"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>